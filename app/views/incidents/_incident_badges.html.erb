<!-- Status and Severity -->
<div class="flex items-center space-x-4">
  <div>
    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-<%= incident.status_color %>-100 text-<%= incident.status_color %>-800">
      <%= incident.status.humanize %>
    </span>
  </div>
  <div>
    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-<%= incident.severity_color %>-100 text-<%= incident.severity_color %>-800">
      <%= incident.severity.humanize %> Severity
    </span>
  </div>
</div>
