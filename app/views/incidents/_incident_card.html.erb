<div id="incident_<%= incident.id %>" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
    <!-- Status Bar -->
    <div class="h-2 bg-<%= incident.status_color %>-500"></div>

    <!-- Card Content -->
    <div class="p-6">
      <!-- Header -->
      <div class="flex items-start justify-between">
        <div class="flex-1 min-w-0">
          <div class="flex items-center space-x-2 mb-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <%= incident.incident_number %>
            </span>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= incident.severity_color %>-100 text-<%= incident.severity_color %>-800">
              <%= incident.severity.humanize %>
            </span>
          </div>
          <h3 class="text-lg font-medium text-gray-900 truncate">
            <%= link_to incident.title, incident, class: "hover:text-blue-600", data: { turbo_frame: "_top" } %>
          </h3>
          <p class="mt-1 text-sm text-gray-500">
            by <%= incident.created_by %>
          </p>
        </div>
        <div class="flex-shrink-0 ml-4">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= incident.status_color %>-100 text-<%= incident.status_color %>-800">
            <%= incident.status.humanize %>
          </span>
        </div>
      </div>

      <!-- Description -->
      <% if incident.description.present? %>
        <p class="mt-3 text-sm text-gray-600 line-clamp-2">
          <%= truncate(incident.description, length: 100) %>
        </p>
      <% end %>

      <!-- Metadata -->
      <div class="mt-4 text-xs text-gray-500 space-y-1">
        <div>Created: <%= incident.created_at.strftime("%b %d, %Y at %I:%M %p") %></div>
        <% if incident.acknowledged_at.present? %>
          <div>Acknowledged: <%= incident.acknowledged_at.strftime("%b %d, %Y at %I:%M %p") %></div>
        <% end %>
        <% if incident.resolved_at.present? %>
          <div>Resolved: <%= incident.resolved_at.strftime("%b %d, %Y at %I:%M %p") %></div>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="mt-4 flex space-x-2">
        <% unless incident.resolved? %>
          <% unless incident.acknowledged? %>
            <%= link_to acknowledge_incident_path(incident), method: :patch, 
                class: "inline-flex items-center px-2.5 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50",
                data: { turbo_method: :patch } do %>
              Acknowledge
            <% end %>
          <% end %>
          <%= link_to resolve_incident_path(incident), method: :patch,
              class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700",
              data: { turbo_method: :patch, confirm: "Mark this incident as resolved?" } do %>
            Resolve
          <% end %>
        <% end %>
        <%= link_to edit_incident_path(incident),
            class: "inline-flex items-center px-2.5 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50",
            data: { turbo_frame: "_top" } do %>
          Edit
        <% end %>
      </div>
    </div>
</div>
