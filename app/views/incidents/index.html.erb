<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center">
          <h1 class="text-3xl font-bold text-gray-900">Incident Dashboard</h1>
          <div class="ml-6 flex space-x-4">
            <div class="bg-blue-100 px-3 py-1 rounded-full">
              <span class="text-sm font-medium text-blue-800">Total: <%= @total_count %></span>
            </div>
            <div class="bg-red-100 px-3 py-1 rounded-full">
              <span class="text-sm font-medium text-red-800">Unresolved: <%= @unresolved_count %></span>
            </div>
          </div>
        </div>
        <div>
          <%= link_to new_incident_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            New Incident
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <% if @incidents.any? %>
      <!-- Incidents Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @incidents.each do |incident| %>
          <%= turbo_frame_tag "incident_#{incident.id}", class: "block" do %>
            <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
              <!-- Status Bar -->
              <div class="h-2 bg-<%= incident.status_color %>-500"></div>
              
              <!-- Card Content -->
              <div class="p-6">
                <!-- Header -->
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center space-x-2 mb-2">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <%= incident.incident_number %>
                      </span>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= incident.severity_color %>-100 text-<%= incident.severity_color %>-800">
                        <%= incident.severity.humanize %>
                      </span>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 truncate">
                      <%= link_to incident.title, incident, class: "hover:text-blue-600" %>
                    </h3>
                    <p class="mt-1 text-sm text-gray-500">
                      by <%= incident.created_by %>
                    </p>
                  </div>
                  <div class="flex-shrink-0 ml-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= incident.status_color %>-100 text-<%= incident.status_color %>-800">
                      <%= incident.status.humanize %>
                    </span>
                  </div>
                </div>

                <!-- Description -->
                <% if incident.description.present? %>
                  <p class="mt-3 text-sm text-gray-600 line-clamp-2">
                    <%= truncate(incident.description, length: 100) %>
                  </p>
                <% end %>

                <!-- Metadata -->
                <div class="mt-4 text-xs text-gray-500 space-y-1">
                  <div>Created: <%= incident.created_at.strftime("%b %d, %Y at %I:%M %p") %></div>
                  <% if incident.acknowledged_at.present? %>
                    <div>Acknowledged: <%= incident.acknowledged_at.strftime("%b %d, %Y at %I:%M %p") %></div>
                  <% end %>
                  <% if incident.resolved_at.present? %>
                    <div>Resolved: <%= incident.resolved_at.strftime("%b %d, %Y at %I:%M %p") %></div>
                  <% end %>
                </div>

                <!-- Actions -->
                <div class="mt-4 flex space-x-2">
                  <% unless incident.resolved? %>
                    <% unless incident.acknowledged? %>
                      <%= link_to acknowledge_incident_path(incident), method: :patch, 
                          class: "inline-flex items-center px-2.5 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50",
                          data: { turbo_method: :patch } do %>
                        Acknowledge
                      <% end %>
                    <% end %>
                    <%= link_to resolve_incident_path(incident), method: :patch,
                        class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700",
                        data: { turbo_method: :patch, confirm: "Mark this incident as resolved?" } do %>
                      Resolve
                    <% end %>
                  <% end %>
                  <%= link_to edit_incident_path(incident),
                      class: "inline-flex items-center px-2.5 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50" do %>
                    Edit
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No incidents</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating your first incident.</p>
        <div class="mt-6">
          <%= link_to new_incident_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            New Incident
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
